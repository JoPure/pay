page {
  height: 100%;
}

.container {
  height: 100%;
  background-color: #f5f5f5;
}

.shop-wrap {
  width: 100%;
  padding: 20rpx 5%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.shop-wrap text {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  padding-left: 20rpx;
}

.shop-wrap image {
  width: 80rpx;
  height: 80rpx;
  background-size: cover;
  /*margin-top: 10rpx;*/
}

.input-wrap {
  display: flex;
  background-color: #fff;
  height: 40px;
  line-height: 40px;
  padding: 10rpx 0rpx;
  /*margin-top: 20rpx;*/
}

.input-wrap input {
  height: 40px;
  line-height: 40px;
  padding-left: 40rpx;
  font-size: 16px;
  letter-spacing: 0;
}

.num-wrap {
  position: absolute;
  width: 100%;
  bottom: 0;
  background-color: #fcfcfc;
}

.num-wrap .title {
  text-align: center;
  border: 1rpx solid #dadada;
  border-bottom: 0;
  height: 40px;
  line-height: 40px;
}

.numbers {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #dadada;
  border-right: 0;
  border-bottom: 0;
}

.num-wrap text {
  width: 33%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-bottom: 1rpx solid #dadada;
  border-right: 1rpx solid #dadada;
}

.confirm-btn {
  width: 90%;
  margin-top: 40rpx;
}

.yue {
  padding: 20rpx 5%;
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  color: #8c8c8c;
  font-size: 12px;
}

.yue view {
  width: 100%;
  text-align: right;
}

.yue .money {
  padding-left: 6rpx;
  color: orangered;
}

.history-text {
  text-align: right;
  font-size: 12px;
  color: #338af9;
  margin-right: 5%;
}

.helper{
  width: 100%;
  position: absolute;
  text-align: center;
  bottom: 40px;
}
.helper button{
  margin-left: 10rpx;
  color: #8c8c8c;
  border: none;
  width:120px;
}