/* cashier-manager.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  background-color: #f5f5f5;
  text-align: center;
}

.win-wrap {
  display: flex;
  flex: 1;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 11pt;
}

.arrow {
  display: inline-block;
  border: 8rpx solid transparent;
  border-top: 8rpx solid #9b9b9b;
  margin-left: 10rpx;
}

.win-wrap.active .arrow {
  border: 8rpx solid transparent;
  border-bottom: 8rpx solid #9b9b9b;
}

.cashier-list {
  width: 100%;
}

.cashier {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60px;
  background-color: #fff;
  margin-bottom: 1rpx;
}

.cashier image {
  width: 50px;
  height: 50px;
  margin-top: 5px;
}

.cashier-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.cashier-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 10rpx;
}

.cashier-info  text {
  display: flex;
  width: 100%;
}

.username {
  height: 30px;
  font-weight: bold;
  align-items: flex-end;
}

.tel {
  align-items: center;
  height: 30px;
  font-size: 12px;
  color: #8c8c8c;
}

.btns {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.btns button {
  height: 60px;
  border: none;
  line-height: 60px;
  font-size: 14px;
  color: #fff;
  border-radius: 0;
}

.btns button::after {
  display: none;
}

.edit-btn {
  border: none;
  color: #fff;
  background-color: #f85;
  border-color: #f85;
}

.del-btn {
  background-color: #f44;
  border-color: #e33;
  border: none;
}

