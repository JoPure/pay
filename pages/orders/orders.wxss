page {
  height: 100%;
}

.container {
  height: 100%;
}

.scrollView {
  height: 100%;
  padding-top: 100rpx;
}

.header {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 10rpx 28rpx 0rpx 28rpx;
  background-color: #f5f5f5;
  position: fixed;
  top: 0px;
  z-index: 1;
}

.header .headItem {
  width: 85%;
  line-height: 50rpx;
}

.header .headItem text {
  width: 100%;
}

.tip {
  color: #ff8247;
  font-size: 12pt;
  font-weight: bold;
  letter-spacing: 2px;
}

.header .time {
  color: #000;
}

.header view image {
  width: 48rpx;
  height: 48rpx;
  margin-top: -30rpx;
}

.order-item {
  background-color: #fff;
  padding: 20rpx;
  margin: 3rpx 0;
  display: flex;
  height: 100rpx;
}

.order-item view {
  height: 64rpx;
  line-height: 64rpx;
}

.shopinfo {
  display: flex;
  height: 64rpx;
  line-height: 64rpx;
  width: 100rpx;
}

.shopname {
  width: 70%;
  margin-left: 10rpx;
}

.shopname text {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.shop {
  color: #353535;
}

.shopicon {
  width: 100rpx;
  height: 100rpx;
  background-size: cover;
}

.pay-money {
  display: flex;
  justify-content: flex-end;
  width: 20%;
}

.pay-money .money {
  color: #09BB07;
  font-size: 12px;
  margin-top: 10rpx;
  font-weight: bold;
  letter-spacing: 1px;
}

.datetime {
  width: 100%;
  color: #b2b2b2;
  margin-top: -10rpx;
  text-align: right;
}

.fullbg {
  position: fixed;
  top: 0rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 1s;
  display: block;
  opacity: 0.5;
}

picker-view-column {
  text-align: center;
}

.day-column {
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 10prx;
  z-index: 4;
  top: 323px;
  background: #fff;
}
